<div>
    {{#employee}}
        <form class="edit-employee-form">
            <legend>Edit Employee</legend>

            <div class="form-group">
                <label>First Name</label>
                <input name="firstName" class="form-control" type="text" value="{{firstName}}"/>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input name="lastName" class="form-control" type="text" value="{{lastName}}"/>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input name="phone" class="form-control" type="text" value="{{phone}}"/>
            </div>
            <hr/>
            <button type="submit" class="btn">Update</button>
            <input type="hidden" name="employeeId" value="{{employeeId}}"/>
            <input type="hidden" name="id" value="{{employeeId}}"/>
            <button data-employee-id="{{employeeId}}" class="btn btn-danger delete">Delete</button>
        </form>
    {{/employee}}
</div>
